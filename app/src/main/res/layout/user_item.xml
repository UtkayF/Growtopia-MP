<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bullettin_board_layout"
    android:layout_margin="4dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/boardyellowcolor"
        android:src="@android:color/transparent"/>


    <ImageView
        android:id="@+id/ic_admin_symbol"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/layoutL"
        android:src="@drawable/ic_admin_golden"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/layoutL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_profile"
        android:layout_marginStart="7dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="Username"
            style="@style/TextShadowStyle"
            android:textSize="19sp"
            android:maxLines="1"
            android:textColor="@color/boardyellowcolor"
            android:fontFamily="@font/opensansbold"/>


    </LinearLayout>



</RelativeLayout>

